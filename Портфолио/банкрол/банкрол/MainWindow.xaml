<Window x:Class="банкрол.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:банкрол"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Margin="0,0,10,9" Height="463" VerticalAlignment="Bottom">


            <Label Content="Счет 1:" Margin="10,0,550,429"/>
            <Label x:Name="account1Label" Content="0" Margin="60,0,534,429"/>

            <Label Content="Счет 2:" Margin="285,0,292,426" RenderTransformOrigin="0.5,0.5">
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="-0.275"/>
                        <RotateTransform/>
                        <TranslateTransform X="-0.495"/>
                    </TransformGroup>
                </Label.RenderTransform>
            </Label>
            <Label x:Name="account2Label" Content="0" Margin="332,0,259,429"/>

            <TextBox x:Name="amountTextBox" Margin="10,88,432,343" Visibility="Hidden" />
            <Button x:Name="ww" Width="100" Height="30" Content="Пополнить" Click="DepositButton_Click" HorizontalAlignment="Left" Margin="10,125,0,308" Visibility="Hidden" />
            <Button x:Name="ee" Content="перевести" HorizontalAlignment="Left" Height="33" Margin="10,195,0,0" VerticalAlignment="Top" Width="92" Click="Button_Click_3" Visibility="Hidden" />
            <TextBox x:Name="сумма" HorizontalAlignment="Left" Height="28" Margin="10,167,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="184" Visibility="Hidden" />
            <ComboBox x:Name="ТемаCombobox" HorizontalAlignment="Left" Margin="569,10,0,0" VerticalAlignment="Top" Width="120">
                <TextBlock Text="желтый"/>
                <TextBlock Text="Серый"/>
            </ComboBox>
            <Button x:Name="bb" Content="разблокировать " HorizontalAlignment="Left" Margin="267,195,0,0" VerticalAlignment="Top" Height="30" Width="92" Click="Button_Click"/>
            <Button x:Name="aaa" Content="заблокировать " HorizontalAlignment="Left" Margin="597,423,0,0" VerticalAlignment="Top" Height="30" Width="92" Click="aaa_Click"/>
            <RadioButton x:Name="aq" Content="пополнение" HorizontalAlignment="Left" Margin="597,140,0,0" VerticalAlignment="Top" Checked="aq_Checked_1" Visibility="Hidden" />
            <RadioButton x:Name="qa" Content="перевод" HorizontalAlignment="Left" Margin="597,155,0,0" VerticalAlignment="Top" Visibility="Hidden"  Checked="aq_Checked_1"/>
            <RadioButton x:Name="sq" Content="операции" HorizontalAlignment="Left" Margin="597,170,0,0" VerticalAlignment="Top" Visibility="Hidden"  Checked="aq_Checked_1"/>
            <ListBox x:Name="transactionListBox" HorizontalAlignment="Left" Height="149" Margin="165,246,0,0" VerticalAlignment="Top" Width="362"  Visibility="Hidden"/>
        </Grid>
    </Grid>
</Window>

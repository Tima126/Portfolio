<Window x:Class="Bank.Tema"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank"
        mc:Ignorable="d"
        Title="Tema" Height="360" Width="489">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Content="Темная тема" Click="DarkThemeButton_Click"  HorizontalAlignment="Left" Margin="199,62,0,225" Foreground="White" Background="Black" FontWeight="Bold" Width="82"/>
        <Button Content="Светлая тема" Click="LightThemeButton_Click" HorizontalAlignment="Left" Margin="199,139,0,149" Background="White" Foreground="Black" FontWeight="Bold" Width="82"/>
        <Button x:Name="Желтый" Content="Желтая тема" HorizontalAlignment="Left" Margin="199,207,0,0" VerticalAlignment="Top" Height="39" Width="82" Background="#FFFFF500" BorderBrush="Black" Click="Желтый_Click" Foreground="Black" FontWeight="Bold"/>

    </Grid>
</Window>

<Window x:Class="Bank.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Style="{DynamicResource Border}">
        <Button Style="{DynamicResource Buuton2}" x:Name="переводButton" Content="перевод" HorizontalAlignment="Left" Margin="358,248,0,0" VerticalAlignment="Top" Width="111" Height="29" Click="переводButton_Click"/>
        <Button Style="{DynamicResource Buuton2}" x:Name="пополнитьButton" Content="пополнить" HorizontalAlignment="Left" Margin="358,199,0,0" VerticalAlignment="Top" Click="пополнитьButton_Click" Height="29" Width="111"/>
        <TextBox Style="{DynamicResource Текст}" x:Name="TB" HorizontalAlignment="Left" Margin="358,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="111" Height="40" BorderBrush="Black"/>
        <Label Style="{DynamicResource Лабел}" x:Name="выводLB" Content="" HorizontalAlignment="Left" Margin="486,122,0,0" VerticalAlignment="Top" Height="58" Width="167"/>
        <Button x:Name="Тема" Content="Темы" HorizontalAlignment="Left" Margin="53,52,0,0" VerticalAlignment="Top" Height="39" Width="111" Click="Тема_Click" Background="#FFE9FF1E" FontWeight="Bold" FontFamily="Arial Black" FontSize="16"/>
        <Button Content="Сохранить"  Margin="644,217,19,166"/>
        <Button Content="Загрузить"  Margin="486,217,177,166"/>
        <ListBox x:Name="transactionListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="53,105,470,46"/>
    </Grid>
</Window>
